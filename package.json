    "jsdom": "^11.1.0",
    "json-loader": "^0.5.2",
    "jsx-loader": "^0.13.2",
    "mocha": "^3.5.0",
    "mocha-jsdom": "^1.1.0",
    "mocha-lcov-reporter": "1.3.0",
    "node-libs-browser": "^2.0.0",
    "react-hot-loader": "^1.2.7",
    "react-tools": "^0.13.3",
